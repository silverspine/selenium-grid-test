    "version": "0.2.0",
    "configurations": [{
        "type": "node",
        "request": "launch",
        "name": "Jest All",
        "program": "${workspaceFolder}/node_modules/.bin/jest",
        "args": ["--runInBand"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Mocha All",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
            "--timeout",
            "999999",
            "--colors",
            "${workspaceFolder}/mocha"
        ],
        "env": {
            "NODE_ENV": "production"
        },
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
    }]
}